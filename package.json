{
	"private": true,
	"name": "@fijn/monorepo",
	"version": "0.0.0",
	"description": "Peakfijn's styled system",
	"keywords": [
		"peakfijn",
		"styled",
		"system"
	],
	"main": "index.js",
	"author": "Cedric van Putten <cedric@peakfijn.nl>",
	"license": "MIT",
	"scripts": {
		"postinstall": "lerna bootstrap",
		"test": "jest",
		"lint": "eslint ./packages --ext ts,tsx,js,jsx",
		"start": "tsc --watch",
		"build": "tsc --build",
		"clean": "tsc -b --clean && lerna clean --yes && lerna exec 'git clean -xdf build package-lock.json'",
		"publish": "tsc -b --clean && lerna exec 'git clean -xdf build package-lock.json' && tsc -b && lerna publish",
		"commit": "git-cz",
		"storybook": "start-storybook"
	},
	"devDependencies": {
		"@babel/core": "^7.7.2",
		"@babel/preset-env": "^7.7.1",
		"@babel/preset-react": "^7.7.0",
		"@babel/preset-typescript": "^7.7.2",
		"@lerna/project": "^3.18.0",
		"@peakfijn/config-commitizen": "^2.1.0",
		"@peakfijn/config-commitlint": "^2.1.0",
		"@storybook/addon-actions": "^5.2.5",
		"@storybook/addon-console": "^1.2.1",
		"@storybook/addon-info": "^5.2.5",
		"@storybook/addon-knobs": "^5.2.5",
		"@storybook/addon-viewport": "^5.2.5",
		"@storybook/react": "^5.2.5",
		"@testing-library/jest-dom": "^4.2.3",
		"@testing-library/react": "^9.3.2",
		"@types/jest": "^24.0.22",
		"@types/node": "^12.12.6",
		"@types/react": "^16.9.11",
		"@typescript-eslint/eslint-plugin": "^2.6.1",
		"@typescript-eslint/parser": "^2.6.1",
		"babel-jest": "^24.9.0",
		"babel-loader": "^8.0.6",
		"eslint": "^6.6.0",
		"eslint-plugin-jest": "^23.0.3",
		"eslint-plugin-react": "^7.16.0",
		"eslint-plugin-react-hooks": "^2.2.0",
		"jest": "^24.9.0",
		"jest-styled-components": "^6.3.3",
		"lerna": "^3.18.4",
		"react": "^16.11.0",
		"react-dom": "^16.11.0",
		"react-test-renderer": "^16.11.0",
		"typescript": "^3.7.2"
	},
	"config": {
		"commitizen": {
			"path": "@peakfijn/config-commitizen"
		}
	}
}
